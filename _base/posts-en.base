views:
  - type: table
    name: Table
    filters:
      and:
        - file.inFolder("content/docs")
        - file.name != "_index"
        - file.name != "about"
        - '!file.name.contains("zh-CN")'
    order:
      - file.name
      - file.folder
      - file.tags
    sort:
      - property: file.mtime
        direction: DESC
    columnSize:
      file.name: 202
